{
  "cSpell.words": ["datetime", "datetimes", "lavamoat"],
  "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,
  "javascript.preferences.importModuleSpecifier": "relative",
  "json.schemas": [
    {
      "fileMatch": ["app/manifest/*/*.json"],
      "url": "https://json.schemastore.org/chrome-manifest"
    },
    {
      // apply the scheme to our package.json, but no others
      "fileMatch": ["package.json", "!node_modules/**/package.json"],
      "url": "./.vscode/package-schema.json"
    }
  ],
  "typescript.tsdk": "node_modules/typescript/lib"
}
